function findMax(numbers) {
  if (!Array.isArray(numbers) || numbers.length === 0) {
    // If the input is not an array or the array is empty, return undefined.
    return undefined;
  }

  let max = numbers[0]; // Assume the first element is the maximum.

  // Loop through the array to find the maximum.
  for (let i = 1; i < numbers.length; i++) {
    if (numbers[i] > max) {
      max = numbers[i];
    }
  }

  return max;
}
